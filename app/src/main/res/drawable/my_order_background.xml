<?xml version="1.0" encoding="utf-8"?><!-- 定义矩形rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="false"
    android:innerRadius="@android:dimen/dialog_min_width_minor"
    android:innerRadiusRatio="@android:dimen/app_icon_size"
    android:shape="rectangle"
    android:tintMode="multiply"
    android:useLevel="true"
    android:visible="true">
    <!-- 设置边框的大小和颜色 -->
    <gradient
        android:endColor="#00838F"
        android:startColor="@color/mainColor"
        android:type="linear" />
    <!-- 设置矩形内的颜色,此处为透明色 -->
    <!--    <solid android:color="#E7EBEF" />-->


    <!-- 定义圆角弧度 -->
    <corners
        android:bottomLeftRadius="25dp"
        android:bottomRightRadius="0dp"
        android:topLeftRadius="25dp"
        android:topRightRadius="0dp" />

</shape>