<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/change_password_title"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="修改密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/change_password_old"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_weight="9"
        android:background="@drawable/login_input_background"
        android:hint="旧密码"
        android:inputType="text"
        android:maxLength="10"
        android:textColorHint="#b0bec5" />

    <EditText
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/login_input_background"
        android:id="@+id/change_password_new"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_weight="9"
        android:hint="新密码"
        android:inputType="text"
        android:maxLength="10"
        android:outlineAmbientShadowColor="#263238"
        android:outlineSpotShadowColor="#b0bec5"
        android:textColorHint="#b0bec5" />
    </LinearLayout>
    <Button
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:id="@+id/change_password_apply"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="确认修改"
        android:padding="10dp"
        android:background="@drawable/bt_signup_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>